@charset "EUC-KR";
body{margin:0px;}
#Center_img img{
position:relative; 
z-index:0; 
width:100%; 
height: auto;}
#image_container{
	position:absolute;
	top:0;
	left:20%;
	width:20%;
	height:20%;
	background-color:white;
	z-index:15;
	display: flex;
    justify-content: center;
}
#image_container img{
    width:60%;
    height:auto;
}
#input{
	width:20%;
	height:20%;
	background-color:white;
	position:absolute;
	top:0;
	left:0;
	z-index:15;
}

#top{
width:100%;
height: 40%;
background-color:black; 
opacity:0.5; 
position:absolute; 
top: 76%; 
left: 50%; 
transform: translate( -50%, -50% );
z-index:10;
}

#top_text p{
position:absolute;
z-index:15;
opacity:1 !important;
text-align:center;
font-size:5rem;
font-weight:bold;	
color:white;
top: 58%; 
left: 50%; 
transform: translate( -50%, -50% );
}

#button_text{
width:100%;
position:absolute;
z-index:15;
opacity:1 !important;
text-align:center;
font-size:2rem;
font-weight:bold;	
color:white;
top: 80%; 
left: 50%; 
transform: translate( -50%, -50% );
}

#button_text a{
border:5px solid white;
border-radius:10px;
padding:10px 20px 10px 20px;
margin:0 20px 0 20px;

}
a { text-decoration: none; color: white; }
a:visited { text-decoration: none; }
a:hover { text-decoration: none; }
a:focus { text-decoration: none; }
a:hover, a:active { text-decoration: none; }