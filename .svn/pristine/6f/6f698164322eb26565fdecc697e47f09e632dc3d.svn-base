@charset "EUC-KR";
body{
	margin:0;
	padding:0;
	background-color:#E9E9E9;
}
img{
	width:590px;
	height:390px;
	
}
#title{
	background-color:#333333;
	color:white;
	font-size:30px;
	padding:20px 0 20px 0;
	font-weight:bold;
}
#main_tbl{
	margin-left:auto; 
	margin-right:auto;
	background-color:#E9E9E9;
}
#title{
	text-align:center;
}
#info_tbl{
	border:2px solid #C5C5C5 !important;
	width:100%;
	height:400px;
	border-collapse: collapse;
	background-color:white;
}
#info_tbl tr{
	border-bottom:2px solid #C5C5C5;
}

#info_tbl td:nth-child(1){
	padding-left:30px;
	font-weight:bold;
	font-size:20px;
	color:gray;
}
#info_tbl td:nth-child(2){
	width:75%;
	text-align:right;
	padding-right:30px;
	font-weight:bold;
	font-size:30px;
	
}
#info_tbl tr:nth-child(4) td:nth-child(2){
	border:none;
	color:red;
}
#input_tbl{
	width:100%;
	text-align:center;
}
#input_tbl td{
	padding-top:20px;
}
#input_tbl input{
	width:350px;
	height:70px;
	background-color:#333333;
	color:white;
	font-size:25px;
	border-radius:10px;
	border:1px solid #333333;
}